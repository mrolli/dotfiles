{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{if .Root}} root :: {{end}}{{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#d65d0e",
          "foreground_templates": [
            "{{if contains \"root\" .UserName}}#cc241d{{ end }}"
          ],
          "properties": {
            "display_host": false,
            "ssh_icon":  "",
            "prefix": "",
            "postfix": ""
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#ebdbb2",
          "properties": {
            "prefix": " ",
            "text": "at",
            "postfix": " "
          }
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "#98971a",
          "foreground_templates": [
            "{{if .SSHSession }}#cc241d{{end}}"
          ],
          "properties": {
            "display_user": false,
            "prefix": "",
            "postfix": ""
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#ebdbb2",
          "properties": {
            "prefix": " ",
            "text": "in",
            "postfix": " "
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#d79921",
          "properties": {
            "style": "agnoster_short",
            "max_depth": 3,
            "folder_separator_icon": "/",
            "prefix": "\uE5FF ",
            "postfix": " "
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#458588",
          "foreground_templates": [
            "{{ if gt .Ahead 0 }}#689d6a{{ end }}",
            "{{ if gt .Behind 0 }}#cc241d{{ end }}"
          ],
          "properties": {
            "display_upstream_icon": true,
            "display_status": true,
            "display_stash_count": true,
            "stash_count_icon": "\uF692 ",
            "prefix": "<#ebdbb2>on</> ",
            "postfix": " "
          }
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#b16286",
          "properties": {
            "always_enabled": true,
            "prefix": "\ufa1e",
            "postfix": "\u2800"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "envvar",
          "style": "plain",
          "foreground": "#458588",
          "properties": {
            "var_name": "CONDA_DEFAULT_ENV",
            "prefix": "(",
            "postfix": ") "
          }
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "#fabd2f",
          "properties": {
            "prefix": "",
            "root_icon": "âš¡",
            "postfix": " "
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#ebdbb2",
          "properties": {
            "display_exit_code": true,
            "always_enabled": false,
            "error_color": "#fb4934",
            "prefix": "\uE23A ",
            "postfix": " "
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#ebdbb2",
          "properties": {
            "prefix": "",
            "text": "{{if .Root}}#{{else}}${{end}}",
            "postfix": ""
          }
        }
      ]
    }
  ]
}
