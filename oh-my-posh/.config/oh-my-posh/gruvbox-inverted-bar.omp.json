{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 1,
  "final_space": true,
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{if .Root}} root :: {{end}}{{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "leading_diamond": "\uE0B6",
          "foreground": "#ebdbb2",
          "background": "#d65d0e",
          "background_templates": [
            "{{if contains \"root\" .UserName}}#cc241d{{ end }}"
          ],
          "properties": {
            "display_host": false,
            "ssh_icon":  "",
            "prefix": ""
          }
        },
        {
          "type": "session",
          "style": "diamond",
          "foreground": "#ebdbb2",
          "background": "#98971a",
          "background_templates": [
            "{{if .SSHSession }}#cc241d{{end}}"
          ],
          "properties": {
            "display_user": false
          }
        },
        {
          "type": "path",
          "style": "diamond",
          "foreground": "#ebdbb2",
          "background": "#d79921",
          "properties": {
            "prefix": " \uE5FF ",
            "style": "agnoster_short",
            "max_depth": 3,
            "folder_separator_icon": "/"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "foreground": "#ebdbb2",
          "background": "#458588",
          "background_templates": [
            "{{ if gt .Ahead 0 }}#689d6a{{ end }}",
            "{{ if gt .Behind 0 }}#cc241d{{ end }}"
          ],
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": true,
            "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }}"
          }
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "foreground": "#ebdbb2",
          "background": "#b16286",
          "trailing_diamond": "\uE0B4",
          "properties": {
            "always_enabled": true,
            "template": "\ufa1e{{ .FormattedMs }}\u2800"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "diamond",
          "leading_diamond": "\uE0B6",
          "trailing_diamond": "\uE0B4",
          "foreground": "#ebdbb2",
          "background": "#458588",
          "properties": {
            "template": "{{ if ne .Env.CONDA_PROMPT_MODIFIER \"false\" }}{{ .Env.CONDA_PROMPT_MODIFIER }}{{ end }}",
            "prefix": "",
            "postfix": ""
          }
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "#fabd2f",
          "properties": {
            "prefix": "",
            "root_icon": "âš¡",
            "postfix": ""
          }
        },
        {
          "type": "exit",
          "style": "diamond",
          "leading_diamond": "\uE0B6",
          "trailing_diamond": "\uE0B4",
          "background": "#cc241d",
          "properties": {
            "display_exit_code": true,
            "always_enabled": false,
            "color_background": false,
            "error_color": "#ebdbb2",
            "prefix": "\uE23A ",
            "postfix": ""
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#ebdbb2",
          "properties": {
            "prefix": " ",
            "text": "{{if .Root}}#{{else}}${{end}}",
            "postfix": ""
          }
        }
      ]
    }
  ]
}
