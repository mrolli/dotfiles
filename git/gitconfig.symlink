[user]
    name = Michael Rolli
    email = michael@rollis.ch
    signingkey = 4DFE5E3BF4982CAE
[alias]
    ci  = commit -v
    cia = commit -v --amend
    co  = checkout
    st  = status
    s   = status -s
    revert = revert -n
    l  = log --pretty=oneline -n 20 --graph --abbrev-commit
    lg = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(red)%d%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ld = log --follow -p --stat --
[color]
    ui = auto
    interactive = true
    grep = true
    diff = true
    status = true
[color "diff"]
    new = green
    old = red
[core]
    autocrlf = input
    editor = nvim
    excludesfile = ~/.gitignore
[grep]
    lineNumber = true
[pack]
    threads = 0
[diff]
    renamelimit = 0
[merge]
    tool = opendiff
[commit]
    template = ~/.gitmessage
    gpgSign = true
    verbose = true
[fetch]
    prune = true
[push]
    default = simple
[achievement]
    upload = true
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
[credential]
    helper = osxkeychain
[tag]
    gpgSign = true
[init]
    defaultBranch = main
[pull]
    ff = only
