#!/usr/bin/env bash

filter="*"
numdig=2
prefix=""
dryrun="echo"

while getopts hnd:f:p: OPTION
do
  case "${OPTION}" in
    h)
      echo "Usage: ${0} [filter] [numDigits] [prefix]"
      exit 1
      ;;
    n) dryrun="";;
    d) numdig=${OPTARG};;
    f) filter="${OPTARG}";;
    p) prefix="${OPTARG}";;
  esac
done

i=0
workdone=0
for file in $filter
do
  ((i++))
  ext=${file##*.}
  name="${prefix}$(printf "%"$numdig"s" $i | tr " " "0")"
  [ "${file}" == "${name}.${ext}" ] && continue
  $dryrun mv $file $name.$ext
  workdone=1
done

[ $workdone -eq 0 ] && echo "Nothing to do." || \
  ([ ! -z $dryrun ] && echo -e "\nThis was only a dry-run. Add -n if changes should really take effect.")

exit 0

