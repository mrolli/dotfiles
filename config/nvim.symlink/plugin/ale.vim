" Ale
" https://github.com/dense-analysis/ale

"let g:ale_puppet_puppet_executable = 'pdk bundle exec puppet'
"let g:ale_puppet_puppetlint_executable = 'pdk bundle exec puppet-lint'
"let g:ale_puppet_puppetlint_options = '--no-80chars-check --no-class_inherits_from_params_class-check --no-autoloader_layout-check'
let g:ale_echo_msg_format = '[%linter%] %s [%severity%]'
let g:ale_sign_error = '✘'
let g:ale_sign_warning = '⚠'
"let g:ale_lint_on_text_changed = 'never'
