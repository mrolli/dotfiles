    lineNumber = true
[pack]
    threads = 0
[diff]
    renamelimit = 0
    renames = copies
    colorMoved = default
[merge]
    conflictstyle = diff3
[commit]
    template = ~/.config/git/message-template
    gpgSign = true
    verbose = true
[fetch]
    prune = true
[push]
    # https://git-scm.com/docs/git-config#git-config-pushdefault
    default = current
[achievement]
    upload = true
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
